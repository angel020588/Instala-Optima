entrypoint = "index.js"
modules = ["python-3.11", "nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["justbuild", "try", "python312Packages.pyngrok"]

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["npm", "install"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UltraBase Backend"

[[workflows.workflow]]
name = "UltraBase Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"
waitForPort = 4000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000

[[ports]]
localPort = 8080
externalPort = 80
